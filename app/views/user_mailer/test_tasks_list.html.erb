<h1>客户端<%= Time.zone.today %>日报</h1>

<table style="border: 1px solid #999;border-collapse: collapse;width:960px;">
  <thead>
  <tr>
    <th style="border: 1px solid #999;font-size: 70%;">责任人</th>
    <th style="border: 1px solid #999;font-size: 70%;">星期一</th>
    <th style="border: 1px solid #999;font-size: 70%;">星期二</th>
    <th style="border: 1px solid #999;font-size: 70%;">星期三</th>
    <th style="border: 1px solid #999;font-size: 70%;">星期四</th>
    <th style="border: 1px solid #999;font-size: 70%;">星期五</th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
  <tr>
    <td style ="border: 1px solid #999;" width=50><%= task.user.name %></td>
    <td style ="border: 1px solid #999;" width=200><%= raw task.content %></td>
    <td style ="border: 1px solid #999;" width=200></td>
    <td style ="border: 1px solid #999;" width=200></td>
    <td style ="border: 1px solid #999;" width=200></td>
    <td style ="border: 1px solid #999;" width=200></td>
  </tr>
<% end %>
  </tbody>
</table>

