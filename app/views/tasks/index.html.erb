<h1>日报列表</h1>

<table>
  <tr>
    <th>用户名</th>
    <th>内容</th>
    <th>日期</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.user.login %></td>
    <td><%= task.content %></td>
    <td><%= task.created_at.strftime("%Y-%m-%d") %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

