<h1><%= current_user.name %>的日报列表</h1>

<p id="notice"><%= notice %></p>

<div id="new_report_form">
<% unless @finished %>
  <span>新日报，不要粘贴带表格的word，只要在编号下一一写好就可以了。</span><br/>
  <%= render 'form' %>
<% end %>
<br/>
</div>

<% @tasks.each do |task| %>
    <%#= link_to 'Show', task %>
    <% if task.created_at.strftime("%Y-%m-%d") == Time.zone.today.to_s %>
        <%= render(:partial => 'today_task', :locals => {:task => task} ) %>
        <% else %>
        <%= task.created_at.strftime("%Y-%m-%d") %><br/>
        <%= raw task.content %><br/>
    <% end %>
<% end %>



